{
  "extends": "eslint-config-airbnb",
  "env": {
    "browser": true,
  },
  "rules": {
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
    "no-console": 0,
    "no-use-before-define": 0,
    // Temporarily disabled due to babel-eslint issues:
    "block-scoped-var": 0,
    "padded-blocks": 0,
    "semi": [2, "never"]
  },
  "plugins": [
    "react"
  ]
}
